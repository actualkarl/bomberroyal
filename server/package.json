{
  "name": "@bomberroyal/server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "stress-test": "tsx scripts/stress-test.ts",
    "stress-test:50": "tsx scripts/stress-test.ts 50",
    "stress-test:overnight": "tsx scripts/stress-test.ts 1000"
  },
  "dependencies": {
    "@bomberroyal/shared": "*",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pathfinding": "^0.4.18",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/pathfinding": "^0.1.0",
    "@vitest/coverage-v8": "^4.0.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}
